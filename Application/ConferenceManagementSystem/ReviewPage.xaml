<Page x:Class="ConferenceManagementSystem.ReviewPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ConferenceManagementSystem"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ReviewPage">

    <Grid>
        <ListView x:Name="papersListView" HorizontalAlignment="Left" Height="173" Margin="33,58,0,0" VerticalAlignment="Top" Width="166">
            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding PaperName}" Header="Name" Width="80"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Topic}" Header="Topic" Width="75"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button Content="View abstract" HorizontalAlignment="Left" Margin="113,249,0,0" VerticalAlignment="Top" Width="86" Click="Button_Click_1"/>
        <Button Content="View paper" HorizontalAlignment="Left" Margin="33,249,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>

    </Grid>
</Page>
